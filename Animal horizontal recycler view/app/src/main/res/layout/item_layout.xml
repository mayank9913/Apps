<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:elevation="25dp">


    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <LinearLayout
        android:id="@+id/llArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivimage21"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp" />


        <TextView
            android:id="@+id/tvtype21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/ivimage21"
            android:text="Type : Mammal"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvName21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvtype21"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/ivimage21"
            android:text="Name : Cheetah"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>





</ScrollView>

</LinearLayout>